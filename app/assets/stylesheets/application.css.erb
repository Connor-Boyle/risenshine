body {
  margin: 0;
  padding: 0;
}

/*TOP SECTION*/

#top {
  height: 400px;
  background-image: url(<%= 'sunrise_large.jpg' %>);
  background-repeat:no-repeat;
  -webkit-background-size:cover;
  -moz-background-size:cover;
  -o-background-size:cover;
  background-size:cover;
  background-position:center bottom;
}

.welcome {
  display: block;
  margin-right: auto;
  margin-left: auto;
}

.head-text {
 text-align: center;
}

.logo {

}

.logo-img {
  margin: auto;
  display: block;
  padding-top: 50px;
  height: 180px;
  width: 180px;
}

/* TOP SECTION - MOBILE */

@media only screen (max-width: 800px) {
  #top {
    background: url(<%= 'sunrise_small.jpg' %>);
  }
}