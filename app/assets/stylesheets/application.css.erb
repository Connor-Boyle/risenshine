html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video {
    margin:0;
    padding:0;
    border:0;
    outline:0;
    font-size:100%;
    vertical-align:baseline;
    background:transparent;
}

body {
    line-height:1;
    -webkit-overflow-scrolling: touch;
}

article,aside,details,figcaption,figure,
footer,header,hgroup,menu,nav,section {
    display:block;
}

nav ul {
    list-style-type:none;
}

blockquote, q {
    quotes:none;
}

blockquote:before, blockquote:after,
q:before, q:after {
    content:'';
    content:none;
}



a {
    margin:0;
    padding:0;
    font-size:100%;
    vertical-align:baseline;
    background:transparent;
}

/* change colours to suit your needs */
ins {
    background-color:#ff9;
    color:#000;
    text-decoration:none;
}

/* change colours to suit your needs */
mark {
    background-color:#ff9;
    color:#000;
    font-style:italic;
    font-weight:bold;
}

del {
    text-decoration: line-through;
}

abbr[title], dfn[title] {
    border-bottom:1px dotted;
    cursor:help;
}

table {
    border-collapse:collapse;
    border-spacing:0;
}

/* change border colour to suit your needs */
hr {
    display:block;
    height:1px;
    border:0;
    border-top:1px solid #cccccc;
    margin:1em 0;
    padding:0;
}

input, select {
  vertical-align:middle;
}

body {
  width: 100%;
  margin: 0 auto;
}


/*TOP SECTION*/
@media(min-width: 900px){
  #page-container{

    margin:0 10% 0 10%;
  }
}

@media(min-width: 1500px){
  #page-container{

    margin:0 20% 0 20%;
  }
}

#welcome-container {
  height: 400px;
  background-image: url(<%= asset_path('sunrise_large.jpg') %>);
  background-repeat:no-repeat;
  -webkit-background-size:cover;
  -moz-background-size:cover;
  -o-background-size:cover;
  background-size:cover;
  background-position:center bottom;
  width:100%;
  position: relative;

}


.welcome-text {
  text-align: center;
  font-family: 'Patrick Hand SC', cursive;
  font-size: 170%;
  display: block;
  margin-right: auto;
  margin-left: auto;
}


.logo-img {
  margin: auto;
  display: block;
  padding-top: 50px;
  height: 180px;
  width: 180px;
  margin-bottom: 0;
}



/* SECOND SECTION */



body {
  font-family: Arial, Helvetica, sans-serif;
  line-height: 1.5;
  font-size: 14px;        
}

#tabs-container nav {
  -webkit-overflow-scrolling: touch;
}

.tabs-menu {
  height: 30px;
  float: left;
  clear: both;
  list-style-type: none;
  font-family: 'Patrick Hand SC', cursive;
}

.tabs-menu li {
  line-height: 2em;
  float: left;

  background-color: #ccc;
  border-top: 1px solid #d4d4d1;
  border-right: 1px solid #d4d4d1;
  border-left: 1px solid #d4d4d1;
}

.tabs-menu li.current {
  position: relative;
  background-color: #fff;
  border-bottom: 1px solid #fff;
  z-index: 5;
}

.tabs-menu li a {
  padding: 20px;
  font-size: 150%;
  text-transform: uppercase;
  color: #fff;
  text-decoration: none; 
}

.tabs-menu .current a {
  color: #2e7da3;
}

.tab {
  border: 1px solid #d4d4d1;
  background-color: #fff;
  float: left;
  margin-bottom: 20px;
  width: auto;
}

.tab-content {
    position: relative;
    width: auto;
    padding: 20px;
    display: none;
}

.tab-content img {
  display: inline-block;
  height: auto;
  width: 40%;
  float: left;
}

.videoWrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 */
  padding-top: 25px;
  height: 0;
}
.videoWrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

#tab-1 {
 display: block;   
}

/* MOBILE */

@media only screen and (min-device-width: 320px) 
  and (max-device-width: 568px)
  and (-webkit-min-device-pixel-ratio: 2) {

  #welcome-container{
    background-image: url("sunrise_small.jpg");
  }

  #tabs-container {
    width:auto;
  }

  .tabs-menu {
    font-size: 150%;
    margin: auto;
  }
  .tabs-menu a {
    height: 80px;
    width: 80px;
  }

  .tabs-menu {
    border:0px;
    margin:0px;
  }

  .tab-content {
    width: auto;
  }
}